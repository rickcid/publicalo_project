<%= render 'shared/content_title', title: 'Edita Una Publicación' %>

<% if @post.errors.any? %>
	<div class='row'>
		<div class='alert alert-error span8' >
			<h5> Por favor ajuste los siguiente errores: </h5>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>

<div class='well'>
	<%= form_for @post do |f| %>
	  <div class='control-group'>
		  <%= f.label :titulo %>
		  <%= f.text_field :title %>
	  </div>
	  <div class='control-group'>
		  <%= f.label :url %>
		  <%= f.text_field :url %>
	  </div>
	  <div class='control-group'>
		  <%= f.label :descripción %>
		  <%= f.text_area :description, rows: 5 %>
	  </div>
	  <%= f.submit 'Actualiza', class: 'btn btn-primary' %>
	<% end %>
</div>