<%= render 'shared/errors', obj: @post %>

<div class='well'>
	<%= form_for @post do |f| %>
	  <div class='control-group'>
		  <%= f.label :titulo %>
		  <%= f.text_field :title %>
	  </div>
	  <div class='control-group'>
		  <%= f.label :url %>
		  <%= f.text_field :url %>
	  </div>
	  <div class='control-group'>
		  <%= f.label :descripción %>
		  <%= f.text_area :description, rows: 5 %>
	  </div>
	  <%= f.submit(@post.new_record? ? '¡Publícalo!' : '¡Actualiza!', class: 'btn btn-primary' )%>
	<% end %>
</div>