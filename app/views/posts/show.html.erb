	[<%= link_to 'Edita esta publicaciÃ³n', edit_post_path(@post)%>]
</p>

<p>
	<%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: @post.title %>

<p>
	<%= @post.description %>
</p>
<hr/>

<%= form_for [@post, @comment] do |f| %>
  <%= render 'shared/errors', obj: @comment %>
  <div class='control-group'>
    <%= f.label :Commentario, 'Deja un commentario' %>
    <%= f.text_area :body, rows: 3, class: 'span4' %>
  </div>
  <%= f.submit "Agrega tu commentario", class: "btn btn-primary" %>
<% end %>

<h5>Commentarios:</h5>

<% @post.comments.each do |comment| %>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    </br>
    <span class = 'quiet'>Publicado por</span> <%= comment.user.username %>
    <small>el <%= display_datetime(comment.created_at) %></small>
  </div>
<% end %>
