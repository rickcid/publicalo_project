<div class="row">
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
        <i class='icon-arrow-up'></i>
      <% end %>
      <br/>
    <% end %>
    <span id='<%="post_#{post.id}_votes"%>'><%= pluralize(post.total_votes, 'voto') %></span>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: 'post', remote: true do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
	<div class = 'span8 well'>
		<%= render post.categories %>
		<h4><%= link_to post.title, fix_url(post.url) %></h4>
		<p><%= post.description %></p>
		<p>
			<span class = 'quiet'>Publicado por</span> <%= link_to post.user.username, user_path(post.user) %>
			<small>el <%= display_datetime(post.created_at) %></small>
		</p>
		<small>
			<span>
				<%= link_to("#{pluralize(post.comments.size, 'commentario')}", post_path(post)) %>
			</span>
		</small>
	</div>
</div>