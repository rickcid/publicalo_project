<ul class="nav">
  <li>
    <%= link_to "¡Publícalo!", root_path, :class => 'brand' %>
  </li>
  <li>
    <%= link_to 'link', '' %>
  </li>
</ul>
<div class='btn-group nav_item'>
	<%= link_to 'Crea Una Categoría', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
		Categories <span class='caret'></span>
	<% end %>
	<ul class='dropdown-menu'>
		<% Category.all.each do |category| %>
			<li>
        <%= link_to category.name, category_path(category)%>
			</li>
		<% end %>
    <% if logged_in? %>
		  <li class='divider'></li>
		  <li>
		    <%= link_to(new_category_path) do %>
		    	<i class="icon-plus"></i>
		    	Crea Una Categoría
		    <% end %>
		  </li>
    <% end %>
	</ul>
</div>
<% if logged_in? %>
  <div class='nav_item'>
  	<%= link_to 'Crea Una Publicación', new_post_path, class: 'btn btn-success btn-small' %>
  </div>
  <div class='nav_item'>
    <%= link_to 'Cerrar Sesión', logout_path, class: 'btn btn-small' %>
  </div>
<% else # logged out%>
  <div class='nav_item'>
    <%= link_to 'Regístrate', register_path, class: 'btn btn-success btn-small' %>
  </div>
  <div class='nav_item'>
    <%= link_to 'Iniciar Sesión', login_path, class: 'btn btn-small' %>
  </div>
<% end %>