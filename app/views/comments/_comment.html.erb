<% show_post ||= false %>
<div class='row'>
  <div class='span0 well text-center'>
    <%= link_to vote_post_comment_path(comment.post, comment), method: 'post' do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
    <%= link_to '' do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  </div>
  
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <% if show_post %>
      en <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br/>
    <span class ='quiet'>Publicado por</span> <%= link_to comment.user.  username, user_path(comment.user) %>
    <small>el <%= display_datetime(comment.created_at) %></small>
  </div>
</div>
